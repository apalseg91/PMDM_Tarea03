<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewTeam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/Zomp"
    android:elevation="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageTeam"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pokemons_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Sunglow" />

            <TextView
                android:id="@+id/typeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pokemons_type_s"
                android:textSize="14sp"
                android:textColor="@color/Olivine"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteButtonTeam"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/baseline_delete_24" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
